doctype html
head
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title FCK - Usuario Login
  // BOOTSTRAP STYLES
  link(href='css/bootstrap4/bootstrap.css' rel='stylesheet')
  link(href='css/login.css' rel='stylesheet')
  // FONTAWESOME STYLES
  link(href='css/font-awesome.css' rel='stylesheet')

body
  #loginForm.container
    .d-flex.justify-content-center.h-100
      .card
        .card-header
          h3 Sign In
        .card-body
          form(action='authentification' method='POST')
            .input-group.form-group
              .input-group-prepend
                span.input-group-text
                  i.fa.fa-user.fa-2x
              input(type='text' name='username' placeholder='User' required='')
            .input-group.form-group
              .input-group-prepend
                span.input-group-text
                  i.fa.fa-key.fa-2x
              input(type='password' name='password' placeholder='Password' required='')
            .form-group
              input.btn.float-right.login_btn(type='submit' value='Login')
            br
            br
            a(href='/users/reg' style='color: white') Nuevo Usuario.

// JQUERY SCRIPTS
script(src='js/jquery-3.6.0.min.js')
// BOOTSTRAP SCRIPTS
script(src='js/bootstrap4/bootstrap.min.js')
